<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.wstutorial.com/ws/CustomerService"
           xmlns:tns="http://www.wstutorial.com/ws/CustomerService">

    <xs:complexType name="Customer">
        <xs:all>
            <xs:element name="id" type="xs:long" />
            <xs:element name="name" type="xs:string" />
            <xs:element name="email" type="xs:string" />
            <xs:element name="phoneNumber" type="xs:string" />
        </xs:all>
    </xs:complexType>

    <xs:element name="updateCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="customerType" type="tns:Customer" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="createCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="customerType" type="tns:Customer" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <xs:element name="deleteCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="xs:long" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="xs:long" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCustomersRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCustomerResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="tns:Customer" name="customer"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCustomersResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="tns:Customer" minOccurs="0" maxOccurs="unbounded" name="customers" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="placeOrderRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="tns:Order" name="order"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="trackOrderRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="tns:Order" name="order"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="updateOrderRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="tns:Order" name="order"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="Customers">
        <xs:sequence>
            <xs:element type="tns:Customer" minOccurs="0" maxOccurs="unbounded" name="customers" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Order">
        <xs:all>
            <xs:element name="id" type="xs:long" />
            <xs:element name="customerId" type="xs:long" />
            <xs:element name="amount" type="xs:long" />
            <xs:element name="status" type="xs:string" />
            <xs:element name="items" type="tns:Item"/>
        </xs:all>
    </xs:complexType>
    <xs:complexType name="Item">
        <xs:all>
            <xs:element name="id" type="xs:long" />
            <xs:element name="name" type="xs:string" />
            <xs:element name="quantity" type="xs:long" />
            <xs:element name="price" type="xs:long" />
        </xs:all>
    </xs:complexType>
</xs:schema>
